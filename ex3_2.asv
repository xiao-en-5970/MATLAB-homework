%% 数据预处理
clc;clear;
data = readtable("data_3_2.csv");
buy_price = data.purchase_price;
fix_price = data.fix_price;
%设Vij为第i年购入机器到第j年的花费
v = zeros(6);
for i = 1:5
    for j = 1:6
        if i<j
            v(i,j) = buy_price(i)+sum(fix_price(1:j-i));
        elseif i>j
            v(i,j) = inf;
        end
    end
end

%% 计算v16的最短路
clc;
[s,r]=dijkstra(v,1,6);
reverse(r);
fprintf("最小花费为%f\n最小路径为:",s)